<Dropdown OnClick='e => { Console.WriteLine("Dropdown button clicked."); }'>
    <Overlay>
        <MenuItem>
            Group
        </MenuItem>
    </Overlay>
    <Unbound>
        <Button Icon="@IconType.Outline.PlusCircle" 
                RefBack=@context>
        <Icon Type="down" />
        </Button>
    </Unbound>
</Dropdown>

<Tree @ref="tree"
      DefaultExpandAll
      Draggable
      BlockNode
      ShowIcon
      DataSource="games"
      TitleExpression="x => x.DataItem.Text"
      ChildrenExpression="x => x.DataItem.Items"
      IconExpression="x => x.DataItem.Icon"
      IsLeafExpression="x => x.DataItem.Items?.Count == 0"
      KeyExpression="x => x.DataItem.Id"
      TItem="GameElement"
      OnDragEnd="e=> { }"
      OnDrop="onDrop">
</Tree>

